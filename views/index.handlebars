<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4" style="text-align: center;">Burgers Burgers Burgers</h1>
  </div>
</div>
<div class=container>
  <div class=row>
    <div class="col">
      <h2>Burgers!</h2>
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        <li>
          <h2>{{burger_name}}</h2>
          <button class="devourBtn btn btn-danger" type="submit" data-id={{this.id}} data-devour={{this.devoured}}>Devour It</button>
        </li>
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col">
      <h2>Devoured</h2>
      <ul>
        {{#each burgers}}
        {{#if devoured}}
        <li>
          <h2>{{burger_name}}</h2>
        </li>
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
  <div class='row' style="display: block; text-align:center; margin-top: 200px;">

    <form class="create-form">
      <h2>Add a Delicious Burger</h2>
      <div class="form-group">
        <label for="bur">Name of Burger:</label>
        <input type="text" id="bur" name="name">
      </div>

    
      <button class="btn btn-primary" type="submit">Add Burger</button>
    </form>

  </div>
</div>


