<div class="container">
    <div class="row" id="row1">
        <div class="col" id="col1">
            <h1>Burgers</h1>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                <li>
                    <h3>{{burger_name}}</h3>
                </li><button class="devouredBurger" name={{id}}>Devoured</button>
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col" id="col2">
            <h1>Devoured</h1>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                <li>
                    <h3>{{burger_name}}</h3>
                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>

    <div class="row" id="row2">
        <form class="create-form">

            <div class="form-group">
                <input type="text" id="burger_name" placeholder="Please enter Your Burger" name="name">
            </div>
            <button type="submit" id="clickBurger">Make</button>

        </form>
    </div>
</div>